alpaka.cuprit.net {
    # Enable automatic HTTPS
    tls internal

    # Proxy requests to QGIS Server running on Apache (port 8080)
    reverse_proxy qgis-server:8080 {
        # Optional headers for better proxy handling
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto {scheme}
    }

    # Logging options
    log {
        output file /var/log/caddy/alpaka.cuprit.net.log
        format json
    }
}