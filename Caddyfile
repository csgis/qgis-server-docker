alpaka.cuprit.net {
	# Add logging for debugging
	log {
		output file /data/access.log
		format console
	}

	# Test endpoint
	handle /test {
		respond "Caddy is working!"
	}

	handle {
		reverse_proxy qgis-server:80
	}

        # Add route for ProjectInfo API
    handle /projects/* {
        uri strip_prefix /projects
        reverse_proxy qgis-server:80 {
            header_up SERVICE "PROJECTINFO"
        }
    }
}